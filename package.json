{
  "name": "webapp-template",
  "version": "0.0.0",
  "private": true,
  "//": [
    "parallelshell needs to stay at 3.0.1, because 3.0.2 is bugged",
    "Note: acorn is installed to prevent some error when running npm install"
  ],
  "devDependencies": {
    "browserify": "16.2.3",
    "browserify-compile-templates": "0.3.0",
    "copyfiles": "2.1.0",
    "fkill": "5.3.0",
    "less": "3.9.0",
    "mkdirp": "0.5.1",
    "nodemon": "1.18.9",
    "parallelshell": "3.0.1",
    "ps-node": "0.1.6",
    "rimraf": "2.6.2",
    "svgstore-cli": "1.3.1",
    "uglifycss": "0.0.29",
    "uglify-js": "3.4.9",
    "watch": "1.0.2"
  },
  "scripts": {
    "watch": "npm run build && npm run watch:all",
    "server": "npm run kill:server && nodemon ./bin/www",
    "build": "npm run copy:files && npm run build:css && npm run build:js && npm run build:svg",
    "--- BUILD SCRIPTS---------------------------------------------------------": "",
    "prebuild": "npm install -s && rimraf build",
    "precopy:files": "mkdirp build/public/fonts && mkdirp build/public/resources",
    "copy:files": "copyfiles -f node_modules/font-awesome/fonts/* build/public/fonts/ && copyfiles -f public/*.html build/public/ && copyfiles -f public/resources/* build/public/resources/",
    "prebuild:css": "mkdirp build/public/css",
    "build:css": "lessc public/css/main.less > build/public/css/style.css",
    "postbuild:css": "uglifycss build/public/css/style.css > build/public/css/style.min.css",
    "prebuild:js": "mkdirp build/public/js",
    "build:js": "browserify -t browserify-compile-templates --extension=.html public/js/main.js > build/public/js/bundle.js",
    "postbuild:js": "uglifyjs build/public/js/bundle.js -o build/public/js/bundle.min.js",
    "prebuild:svg": "mkdirp build/public/resources",
    "build:svg": "svgstore -o build/public/resources/icons.svg public/resources/icons/**/*.svg",
    "--- WATCH SCRIPTS---------------------------------------------------------": "",
    "watch:all": "parallelshell \"npm run watch:css -s\" \"npm run watch:js -s\" \"npm run watch:server -s\"",
    "watch:css": "watch \"npm run build:css\" public/css",
    "watch:js": "watch \"npm run build:js\" public/js",
    "watch:server": "npm run kill:server && nodemon --watch api --watch app.js ./bin/www",
    "--- MISCELLANEOUS SCRIPTS-------------------------------------------------": "",
    "install:config": "copyfiles -f webappConfig.js ../",
    "kill:all": "node scripts/killAll.js",
    "kill:server": "node scripts/killServer.js"
  },
  "dependencies": {
    "acorn": "6.0.4",
    "backbone": "1.3.3",
    "body-parser": "1.18.3",
    "cookie-parser": "1.4.3",
    "debug": "4.1.0",
    "express": "4.16.4",
    "font-awesome": "4.7.0",
    "jade": "1.11.0",
    "jquery": "3.3.1",
    "morgan": "1.9.1",
    "serve-favicon": "2.5.0",
    "underscore": "1.9.1"
  }
}
